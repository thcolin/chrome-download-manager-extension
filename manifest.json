{
  "manifest_version": 2,

  "name": "Download Manager",
  "description": "A simple af and beautiful (thanks Material Design) download manager for Chrome",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Quicklook to downloads"
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "permissions": [
    "downloads",
    "downloads.open",
    "downloads.shelf"
  ]
}
